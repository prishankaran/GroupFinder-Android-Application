<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="15dp" />

            <solid android:color="#777678" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <size
                android:height="60dp"
                android:width="300dp" />

            <stroke
                android:width="2dp"
                android:color="#C7C7C7" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:drawable="@drawable/back_arrow"
        android:left="15dp"
        android:right="5dp"
        android:top="15dp"/>

</layer-list>