<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/genbg" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="351dp"
        android:isScrollContainer="false">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="350dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp" >

            <TextView
                android:id="@+id/txtregDayView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/txtSchedule"
                android:layout_marginLeft="10dp"
                android:text="Scheduled:"
                android:textColor="@android:color/white"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/txtCourseName"
                style="@style/text_shadow"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/TextView01"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:shadowColor="@color/gray"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="TextView"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/txtGroupName"
                style="@style/text_shadow"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtCourseName"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtCourseName"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:minHeight="35dp"
                android:shadowColor="@color/gray"
                android:text="TextView"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/txtSchedule"
                style="@style/text_shadow"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtGroupName"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtGroupName"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:shadowColor="@color/gray"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="TextView"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/txtPart"
                style="@style/text_shadow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtLocationView"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:scrollbars="vertical"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtSchedule"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:text="Group Description:"
                android:textColor="@android:color/white"
                android:textSize="23sp" />
            <TextView
                android:id="@+id/txtGrpDesc"
                style="@style/text_shadow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/TextView05"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:scrollbars="vertical"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/txtLocationView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txtGrpDesc"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="17dp"
                android:minHeight="35dp"
                android:text="Participants:"
                android:textColor="@android:color/white"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/txtregDayView"
                android:layout_below="@+id/textView1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="27dp"
                android:text="Group:"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="false"
                android:layout_alignRight="@+id/TextView01"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="Course:"
                android:textColor="@android:color/white"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/txtNotesView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/txtPart"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Post Update:"
                android:textColor="@android:color/white"
                android:textSize="23sp" />

            <EditText
                android:id="@+id/txtGrpNotify"
                style="@style/text_shadow"
                android:labelFor="@+id/txtGrpNotify"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/txtNotesView"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:scrollbars="vertical"
                android:textSize="23sp" />

            <Button
                android:id="@+id/btnPost"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtGrpNotify"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_blue_custom"
                android:gravity="center"
                android:text="Post Update"
                android:textColor="@drawable/text_custom" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/leaveGroup"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/slidingDrawer1"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/goBack"
        android:background="@drawable/button_red_custom"
        android:text="@string/Leave_Button"
        android:textColor="@drawable/text_custom" />

    <Button
        android:id="@+id/goBack"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/slidingDrawer1"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_white_custom"
        android:gravity="center"
        android:text=""
        android:textColor="@drawable/text_custom"
        android:windowSoftInputMode="adjustPan" />

    <SlidingDrawer
        android:id="@+id/slidingDrawer1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="100dp"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:minHeight="35dp" >

        <RelativeLayout
            android:id="@+id/handle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/handle1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/txtNotify"
                android:background="@drawable/button_blue_custom"
                android:drawableRight="@drawable/notification_up"
                android:drawablePadding="20dp"
                android:text="Notifications"
                android:textColor="@drawable/text_custom" />

            <TextView
                android:id="@+id/txtNotify"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:textColor="@color/opaque_red"
                android:textSize="25sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/lstNotifications"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="0dp"
                android:background="@android:color/white"
                android:cacheColorHint="@color/gray"
                android:divider="@color/gray"
                android:dividerHeight="5dp"
                android:listSelector="@color/translucent_green" >
            </ListView>
        </LinearLayout>
    </SlidingDrawer>

</RelativeLayout>