<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.groupfinder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:logo="@drawable/app_icon"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.groupfinder.LoginPage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.groupfinder.StudentActivity" >
        </activity>
        <activity android:name="com.example.groupfinder.GroupList" >
        </activity>
        <activity
            android:name="com.example.groupfinder.AdhocFragmentActivity" >
        </activity>
        <activity
            android:name="com.example.groupfinder.RegularFragmentActivity" >
        </activity>
        <activity
            android:name="com.example.groupfinder.NewGroupActivity" >
        </activity>
        <activity 
            android:windowSoftInputMode="adjustPan"
            android:name="com.example.groupfinder.ViewGroup" >
        </activity>
 
    </application>

</manifest>
